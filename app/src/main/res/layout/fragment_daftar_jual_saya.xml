<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".view.fragment.DaftarJualSayaFragment">

    <TextView
        style="@style/TextViewStyle"
        android:text="@string/daftar_jual_saya"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_seller"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_photo_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/nama_penjual"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_seller_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/kota"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_edit" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_btn_category_unselected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/add_image"
                    android:src="@drawable/ic_box" />

                <TextView
                    android:id="@+id/tv_product"
                    style="@style/TextViewStyle"
                    android:layout_marginStart="8dp"
                    android:text="@string/produk"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_diminati"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:background="@drawable/style_btn_category_unselected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_diminati"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/add_image"
                    android:src="@drawable/ic_baseline_favorite_border_24" />

                <TextView
                    android:id="@+id/tv_diminati"
                    style="@style/TextViewStyle"
                    android:layout_marginStart="8dp"
                    android:text="@string/diminati"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_terjual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:background="@drawable/style_btn_category_unselected"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/img_terjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add_image"
                    android:fontFamily="@font/poppins_medium"
                    android:src="@drawable/ic_dollar"
                    android:text="@string/_dollar"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_terjual"
                    style="@style/TextViewStyle"
                    android:layout_marginStart="8dp"
                    android:text="@string/terjual"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_daftar_jual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>