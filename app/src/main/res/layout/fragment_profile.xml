<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ProfileFragment">

    <TextView
        style="@style/TextViewStyle"
        android:text="@string/akun_saya"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_marginTop="40dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/ic_photo_profile"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/image" />

    <LinearLayout
        android:id="@+id/btn_ubah_akun"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/ic_change_account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_marginTop="6dp"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:text="@string/ubah_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/ic_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_marginTop="6dp"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:text="@string/pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/btn_logout"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:src="@drawable/ic_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/image" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_marginTop="6dp"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:text="@string/keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/version_1_0_0"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"/>

</LinearLayout>