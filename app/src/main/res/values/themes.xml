<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondHand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">#061957</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/style_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonGrayStyle">
        <item name="android:background">@drawable/style_button_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/style_et</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>